{
  "name": "webpack-starter",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "webpack serve",
    "build:develop": "npm run clean && NODE_ENV=development webpack",
    "build:production": "npm run clean && NODE_ENV=production webpack --mode=production",
    "clean": "rimraf dist/",
    "check-types": "tsc --noEmit",
    "eslint": "eslint src/**/*.ts",
    "eslint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "lint": "npm-run-all eslint check-types",
    "lint:fix": "npm-run-all eslint:fix check-types format",
    "convert-webp": "sh bin/convertWebP.sh"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "autoprefixer": "^10.4.0",
    "copy-webpack-plugin": "^10.2.0",
    "css-loader": "^6.5.1",
    "ejs": "^3.1.6",
    "ejs-html-loader": "git+https://git@github.com/bananacoffee/ejs-html-loader.git",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "globule": "^1.3.3",
    "html-loader": "^3.0.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.1",
    "postcss-loader": "^6.2.0",
    "prettier": "^2.4.1",
    "prettier-eslint": "^13.0.0",
    "sass": "^1.43.4",
    "sass-loader": "^12.3.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.2",
    "webpack": "^5.65.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.5.0"
  },
  "dependencies": {
    "@types/jquery": "^3.5.10",
    "axios": "^0.24.0",
    "core-js": "^3.20.0",
    "dotenv-webpack": "^7.0.3",
    "jquery": "^3.6.0",
    "mini-css-extract-plugin": "^2.4.5",
    "postcss-flexbugs-fixes": "^5.0.2",
    "scss-reset": "^1.2.2",
    "terser-webpack-plugin": "^5.2.5"
  },
  "lint-staged": {
    "*.{js,ts}": "lint"
  }
}
