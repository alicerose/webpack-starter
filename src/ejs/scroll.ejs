<!doctype html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
<%- include('./modules/_header'); %>
<main id="wrapper">
    <% for(let i = 1;i<10;i++) { %>
    <%
        function randomColor() {
          return Math.floor(Math.random() * 255);
        }
        const color_code = `rgb(${randomColor()},${randomColor()},${randomColor()})`;
    %>
    <div id="section<%= i %>" style="height:200vh;background:<%= color_code; %>;">
        <%- include('./modules/_anchors'); %>
        <h2>section<%= i %></h2>
    </div>
    <% } %>
</main>
</body>
</html>
